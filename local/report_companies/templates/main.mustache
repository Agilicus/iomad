{{# companies }}
    <div class="card mb-2">
        <div class="card-body">
            <h4 class="card-title"><b>{{ name }}</b></h5>
            {{# nomanagers }}
                <div class="alert alert-warning">{{# str }}nomanagers, local_report_companies{{/ str }}</div>
            {{/ nomanagers }}
            {{^ nomanagers }}
                <h5 class="card-subtitle mt-5">{{# str }}coursemanagers, local_report_companies{{/ str }}</h5>
                <p class="text-muted">{{# str }}totalusercount, local_report_companies, {{ companymanagerscount }}{{/ str }}</p>
                <div>
                    {{# companymanagers }}
                        <ul class="list-unstyled">
                            {{> local_report_companies/userlist }}
                        </ul>
                    {{/ companymanagers }}
                </div>
                
                <h5 class="card-subtitle mt-5">{{# str }}departmentmanagers, local_report_companies{{/ str }}</h5>
                <p class="text-muted">{{# str }}totalusercount, local_report_companies, {{ departmentmanagerscount }}{{/ str }}</p>
                <div>
                    {{# departmentmanagers }}
                        <ul class="list-unstyled">
                            {{> local_report_companies/userlist }}
                        </ul>
                    {{/ departmentmanagers }}
                </div>
            {{/ nomanagers }}

            {{# nousers }}
                <div class="alert alert-warning">{{# str }}nousers, local_report_companies{{/ str }}</div>
            {{/ nousers }}
            {{^ nousers }}
                <h5 class="card-subtitle mt-5">{{# str }}courseusers, local_report_companies{{/ str }}</h5>
                <p class="text-muted">{{# str }}totalusercount, local_report_companies, {{ userscount }}{{/ str }}</p>
            {{/ nousers }}

            {{# nocourses }}
                <div class="alert alert-warning">{{# str }}nocourses, local_report_companies{{/ str }}</div>
            {{/ nocourses }}
            {{^ nocourses }}
                <h5 class="card-subtitle mt-5">{{# str }}courses, local_report_companies{{/ str }}</h5>
                <p class="text-muted">{{# str }}totalusercount, local_report_companies, {{ coursescount }}{{/ str }}</p>
            {{/ nocourses }}
        </div>
    </div>
{{/ companies }}
